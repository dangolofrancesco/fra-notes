---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Resume";
const pdfUrl = "/resume.pdf"; // Assicurati che il file sia in public/resume.pdf
---

<BaseLayout pageTitle={pageTitle}>

  <section class="w-full pt-32 md:pt-40 pb-20 px-6 min-h-screen">
    <div class="max-w-5xl mx-auto">
      
      <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-12 border-b border-gray-200 pb-8">
          <div>
            <h1 class="text-5xl md:text-7xl font-serif font-bold text-gray-900 mb-4">Resume</h1>
            <p class="text-gray-500 font-sans text-lg">
                My academic and professional journey in detail.
            </p>
          </div>

          <a 
            href={pdfUrl} 
            download="resume.pdf"
            class="group flex items-center gap-3 px-6 py-3 bg-black text-white font-sans font-bold uppercase tracking-widest text-xs hover:bg-[#E85D04] transition-colors duration-300 rounded shadow-lg"
          >
            <span>Download PDF</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 group-hover:translate-y-1 transition-transform">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M12 9.75V17m0 0-3-3m3 3 3-3M12 2.25V3" />
            </svg>
          </a>
      </div>

      <div class="w-full bg-gray-100 rounded-xl overflow-hidden shadow-xl border border-gray-200">
          
          <object data={pdfUrl} type="application/pdf" class="w-full h-[80vh] min-h-[500px]">
              <div class="flex flex-col items-center justify-center h-full p-10 text-center text-gray-500 font-sans">
                  <p class="mb-4">Your browser does not support viewing PDFs directly.</p>
                  <a href={pdfUrl} class="text-[#E85D04] font-bold underline hover:text-black">
                      Click here to download the PDF
                  </a>
              </div>
          </object>

      </div>

    </div>
  </section>

</BaseLayout>