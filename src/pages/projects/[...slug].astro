---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// 1. Diciamo ad Astro di generare una pagina per ogni file nella cartella 'projects'
export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');
  return projectEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

// 2. Recuperiamo i dati del singolo progetto
const { entry } = Astro.props;
const { Content } = await entry.render();
const { title, description, date, image, tags, github, report } = entry.data;
---


<BaseLayout pageTitle={title}>

  <div class="fixed top-0 left-0 h-1 bg-[#E85D04] z-50 transition-all duration-300" id="progress-bar" style="width: 0%"></div>

  <!-- Hero Section (stile About) -->
  <section class="relative w-full pb-8 overflow-visible">
    <div class="w-full mx-auto relative group">
        <div class="aspect-[16/9] md:aspect-[21/9] w-full overflow-hidden relative shadow-lg">
             <img 
              src={image} 
              class="w-full h-full object-cover opacity-90"
              alt={title}
            />
            <div class="absolute inset-0 bg-black/10"></div>
        </div>
    </div>
  </section>

  <article class="w-full grid grid-cols-1 md:grid-cols-5 px-6 py-12 md:py-20 gap-y-8">
      
      <!-- Contenuto in colonna centrale (1-3-1) -->
      <div class="col-span-1 md:col-start-2 md:col-span-3 w-full">
          
          <!-- Intestazione Progetto -->
          <div class="text-center mb-12">
              <div class="flex items-center justify-center gap-4 mb-6 text-xs font-bold font-sans uppercase tracking-widest text-gray-400">
                  <span>{date.toLocaleDateString()}</span>
                  <span>•</span>
                  <div class="flex gap-2">
                      {tags.map((tag) => (
                          <span class="text-[#E85D04]">{tag}</span>
                      ))}
                  </div>
              </div>

              <h1 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-6 leading-tight">
                  {title}
              </h1>

              <p class="text-xl text-gray-500 font-sans leading-relaxed mb-8">
                  {description}
              </p>

              {github && (
                <div class="flex justify-center gap-4 mb-8">
                    <a href={github} target="_blank" class="inline-flex items-center gap-2 px-6 py-3 bg-black text-white rounded-full font-bold text-xs uppercase tracking-widest hover:bg-[#E85D04] transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                        View Code
                    </a>
                    {report && (
                        <a href={report} target="_blank" class="inline-flex items-center gap-2 px-6 py-3 bg-[#E85D04] text-white rounded-full font-bold text-xs uppercase tracking-widest hover:bg-black transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6zm4 18H6V4h7v5h5v11z"/></svg>
                            View Report
                        </a>
                    )}
                </div>
              )}
              <hr class="border-gray-200" />
          </div>

          <!-- Contenuto Markdown -->
          <div class="prose prose-lg prose-headings:font-serif prose-p:font-sans prose-a:text-[#E85D04] max-w-none">
            <Content />
          </div>

      </div>

  </article>

  <div class="max-w-4xl mx-auto px-6 pb-20 pt-10 text-center">
      <a href="/progetti" class="text-sm font-bold font-sans uppercase tracking-widest text-gray-400 hover:text-black transition-colors">
          ← Back to All Projects
      </a>
  </div>

</BaseLayout>

<script>
    // Script semplice per la barra di progresso lettura
    window.onscroll = function() {
        let winScroll = document.body.scrollTop || document.documentElement.scrollTop;
        let height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        let scrolled = (winScroll / height) * 100;
        document.getElementById("progress-bar").style.width = scrolled + "%";
    };
</script>