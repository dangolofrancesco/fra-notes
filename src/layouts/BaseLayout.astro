---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css'; 

interface Props {
  pageTitle: string;
  description?: string;
  keywords?: string;
}

const { 
  pageTitle, 
  description = "Data Scientist bridging the gap between engineering and social impact. Explore my projects on FraNotes.",
  keywords = "Francesco D'Angolo, francescodangolo, fra notes, franotes, data scientist, AI researcher, machine learning, causal inference, portfolio"
} = Astro.props;

// Logica per il titolo completo:
// Se siamo in Homepage, vogliamo ESATTAMENTE la frase che hai chiesto.
// Se siamo in altre pagine, vogliamo "Nome Pagina | FraNotes"
const fullTitle = pageTitle === "Home" 
  ? "Francesco D'Angolo Portfolio - FraNotes" 
  : `${pageTitle} | FraNotes`;

const siteUrl = "https://francescodangolo.com";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{fullTitle}</title>
    
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="shortcut icon" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    
    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Francesco D'Angolo" />
    <meta name="robots" content="index, follow" />
    
    <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
    integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
    crossorigin="anonymous"
    >
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={`${pageTitle} | Francesco D'Angolo`} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={siteUrl} />
    <meta property="twitter:title" content={`${pageTitle} | Francesco D'Angolo`} />
    <meta property="twitter:description" content={description} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={siteUrl + Astro.url.pathname} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700;900&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
  </head>
  
  <body class="bg-slate-100 text-gray-900 font-sans antialiased min-h-screen">
    
    <div class="w-full md:w-[85%] max-w-[1600px] mx-auto bg-white shadow-2xl min-h-screen relative flex flex-col overflow-hidden rounded-b-xl border-x border-gray-200">
        
        <Header />
        
        <main class="w-full flex-grow">
          <slot />
        </main>

        <Footer />
        
    </div>

  </body>
</html>